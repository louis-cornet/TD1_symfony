{% extends "base.html.twig" %}
{% block page_title %}
    <title>The Feed</title>
{% endblock %}
{% block page_content %}
    <br>
    <main id="the-feed-main">
        <div id="feed">
            {% if is_granted('ROLE_USER') %}
            {{ form_start(form, {'attr' : {'id' : 'feedy-new', 'class' : 'formClass'}}) }}
            <fieldset>
                <legend>Nouveau feedy</legend>
                <div>
                    {{ form_widget(form.message, {'id': "message", 'attr' : {"placeholder": "✏️ Veuillez ecrir le message de votre publication ici ✏️"}} ) }}
                </div>
                <div>
                    {{ form_widget(form.publier, {'id': "feedy-new-submit", 'label' : "👌 Valider le formulaire 👌"}) }}
                </div>
            </fieldset>
            {{ form_rest(form) }}
            {{ form_end(form) }}
            {% endif %}
            {% for publication in publications %}
                {{ include('publication/publication.html.twig', {'publication' : publication}) }}
            {% endfor %}
        </div>
    </main>
{% endblock %}


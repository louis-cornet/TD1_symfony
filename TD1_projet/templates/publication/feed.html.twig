<!DOCTYPE html>
<html lang="fr">
<head>
    <title>The Feed</title>
    <meta charset="utf-8">

    <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>
<body>
<header>
    <div id="titre" class="center">
        <a href="{{ path('feed') }}"><span>The Feed</span></a>
        <nav>
            <a href="{{ path('feed') }}">Accueil</a>
        </nav>
    </div>
</header>
<div id="flashes-container">
    {% if errors != "" %}
        <!-- Pour chaque message du type "success" -->
        <span class="flashes flashes-success">Success</span>
        <!-- Pour chaque message du type "error" -->
        <span class="flashes flashes-error">Erreur</span>
    {% endif %}
</div>
<br>
<main id="the-feed-main">
    <div id="feed">
        {{ form_start(form, {'attr' : {'id' : 'formId', 'class' : 'formClass'}}) }}
        <fieldset>
            <legend>Nouveau feedy</legend>
            <div>
                {{ form_widget(form.message, {'id': "message", 'attr' : {"placeholder": "✏️ Veuillez ecrir le message de votre publication ici ✏️"}} ) }}
            </div>
            <div>
                {{ form_widget(form.publier, {'id': "publier", 'label' : "👌 Valider le formulaire 👌"}) }}
            </div>
        </fieldset>
        {{ form_rest(form) }}
        {{ form_end(form) }}
        {% for publication in publications %}
            <div class="feedy">
                <div class="feedy-header">
                    <a href="">
                        <img class="avatar"
                             src="img/utilisateurs/anonyme.png"
                             alt="avatar de l'utilisateur">
                    </a>
                    <div class="feedy-info">
                        <span>Anonyme</span>
                        <span> - </span>
                        <span>{{ publication.datePublication|date("d/m/Y") }}</span>
                        <p>{{ publication.message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</main>
</body>
</html>